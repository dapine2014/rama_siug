<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="SIUGJ.Controls.HearingEvent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <StackLayout HeightRequest="115" WidthRequest="100">
        <Frame CornerRadius="15" HasShadow="False" Padding="1" HeightRequest="100">
            <StackLayout BackgroundColor="{DynamicResource ColorBlanco}" Margin="10">
                <Grid VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="FillAndExpand" Orientation="Horizontal">
                        <BoxView HorizontalOptions="Start" WidthRequest="3" Color="{DynamicResource ColorPrimario}"/>
                        <StackLayout Padding="5, 0, 0, 0" HorizontalOptions="Start">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="oval.png" HorizontalOptions="Start" />
                                <Label FontSize="14" VerticalOptions="Start" Text="{Binding StartTime}" TextColor="#656572" />
                                <Label FontSize="14" VerticalOptions="Start" Text=" - " TextColor="#656572" />
                                <Label FontSize="14" VerticalOptions="Start" Text="{Binding EndTime}" TextColor="#656572" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label FontSize="15" Grid.Column="0" MaxLines="1" Text="{Binding Name}" TextColor="{DynamicResource ColorNegro}" />
                                <Label FontSize="14" VerticalOptions="Start" Text=" - " TextColor="#656572" />
                            </StackLayout>
                            <Label FontSize="15" Grid.Column="0" MaxLines="1" Text="{Binding UniqueCode}" TextColor="{DynamicResource ColorNegro}" />
                         </StackLayout>
                   </StackLayout>
                    <StackLayout VerticalOptions="Center" Grid.Row="0" Grid.Column="1">
                        <Button Grid.Row="0" Grid.Column="0"  HeightRequest="35 " Text="+ Unirme" CornerRadius="7" Command="{Binding ManageHearingCommand}" IsEnabled="{Binding IsVirtual}" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Frame>
         <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
        </StackLayout.GestureRecognizers>
    </StackLayout>
</ContentView>

